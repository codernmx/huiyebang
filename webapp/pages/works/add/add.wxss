/* pages/works/add/add.wxss */
page{
  background-color: #fff;
}

.top .title{
  position: fixed;
  top:0;
  left:0;
  right:0;
}

.top text{
  position: absolute;
  top:45%;
  left:50rpx;
  letter-spacing: 5rpx;
}

.content{
  transform: translateY(-100rpx);
  border-radius: 60rpx;
  width: 100%;
  height: calc( 100vh - 490rpx );
}

.content .form-box{
  padding-top:80rpx;
  padding-left:50rpx;
  padding-right:50rpx;
  box-sizing: border-box;
}

.form-box .upload{
  background-color: #FFE9E6;
  height: 292rpx;
  border-radius: 20rpx;
  padding:25rpx;
  box-sizing: border-box;
}

.form-box .upload .upload-btn{
  border-radius: 16rpx;
  height: 190rpx;
}

.van-uploader{
  width: 100%;
  height: 100%;
}

.form-box .upload .upload-btn .upload-desc{
  width: 600rpx;
  height: 190rpx;
}

.form-box .upload .upload-btn .upload-desc image{
  width: 54rpx;
  height: 54rpx;
}

.form-box .btn-box{
  margin-top: 80rpx;
}

.form-box .btn-box .btn{
  width: 290rpx;
  height: 70rpx;
  border-radius: 35rpx;
}

.form-box .btn-box .btn2{
  background-color: #efefef;
}


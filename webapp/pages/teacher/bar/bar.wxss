/* pages/teacher/bar.wxss */
.box {
    box-sizing: border-box;
    padding-top: 5rpx;
    position: fixed;
    width: 100%;
    height: 110rpx;
    display: flex;
    background: #FFFFFF;
    bottom: 0;
    left: 0;
}

.box__list {
    flex: 1;
    text-align: center;
}
.text{
    color: #1D1D1D;
    font-size: 22rpx;
    font-family: Source Han Sans CN;
    font-weight: 600;
    line-height: 22rpx;
    opacity: 0.35;
}
.box__img {
    display: block;
    width: 65rpx;
    height: 57rpx;
    margin: auto;
}
.on{
    color: #F95046;
}